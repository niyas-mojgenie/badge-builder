---
import CanvasModal from "./modals/CanvasModal.astro";
import DelegateNameModal from "./modals/DelegateNameModal.astro";

const {} = Astro.props;
---

<div class="flex h-screen items-center justify-center w-full bg-[#f3f4f6]">
    <div
        id="preview-area"
        style="height: calc(100% - 50px);"
        class="flex items-center justify-center overflow-hidden canvas-container w-full"
    >
        <div id="add-canvas" class="p-4 sm:mx-[50px] w-3/6">
            <button
                onclick="showModal('authentication-modal')"
                class="w-full p-4 border-2 border-gray-700 border-dashed rounded-lg cursor-pointer"
            >
                <div
                    class="flex items-center justify-center h-48 mb-4 rounded bg-gray-50 dark:bg-white"
                >
                    <p class="text-2xl text-gray-400 dark:text-gray-500">
                        <svg
                            class="w-3.5 h-3.5"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 18 18"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 1v16M1 9h16"></path>
                        </svg>
                    </p>
                </div>
            </button>
        </div>
        <div
            id="draggable-container"
            class="bg-white border-2 border-gray-700 border-dashed shadow-xl bg-no-repeat bg-contain hidden"
        >
            <span
                id="delegate-name"
                class="draggable max-w-max hidden"
                style="font-weight: 400; font-size: 16px; "
            >
                Delegate Name
            </span>
            <div id="reg-no" class="draggable max-w-max hidden">
                Registartion Number
            </div>
        </div>
    </div>
</div>
<CanvasModal />
<DelegateNameModal />
