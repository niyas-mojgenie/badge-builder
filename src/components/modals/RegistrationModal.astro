<!-- Main modal -->
<div
    id="registration-modal"
    tabindex="-1"
    aria-hidden="true"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow">
            <!-- Modal header -->
            <div
                class="flex items-center justify-between p-4 md:p-5 border-b rounded-t"
            >
                <h3 class="text-xl font-semibold text-gray-900">
                    Registration Number Properties
                </h3>
                <button
                    type="button"
                    class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
                    onclick="closeModal('registration-modal')"
                >
                    <svg
                        class="w-3 h-3"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 14 14"
                    >
                        <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5">
                <form
                    onsubmit="return updateRegNumber(event)"
                    class="max-w-md mx-auto m-5"
                >
                    <div class="grid md:grid-cols-2 md:gap-6 mt-5 items-center">
                        <div class="relative z-0 w-full mb-5 group">
                            <label
                                class="inline-flex items-center cursor-pointer"
                            >
                                <input
                                    id="toggle-registration-number"
                                    type="checkbox"
                                    value=""
                                    class="sr-only peer"
                                />
                                <div
                                    class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"
                                >
                                </div>
                                <span
                                    class="ms-3 text-sm font-medium text-gray-900"
                                    >Show</span
                                >
                            </label>
                        </div>
                        <div class="relative z-0 w-full mb-5 group">
                            <label
                                class="inline-flex items-center cursor-pointer"
                            >
                                <input
                                    type="color"
                                    id="favcolor-reg-no"
                                    name="favcolor"
                                    value="#000000"
                                    class="form-input"
                                />
                                <span
                                    class="ms-3 text-sm font-medium text-gray-900"
                                    >Color</span
                                >
                            </label>
                        </div>
                    </div>
                    <div>
                        <label for="underline_select" class="sr-only"
                            >Underline select</label
                        >
                        <select
                            id="font-family-reg-no"
                            class="block py-2.5 px-0 w-full text-sm text-gray-500 bg-transparent border-0 border-b-2 border-gray-200 appearance-none focus:outline-none focus:ring-0 focus:border-gray-200 peer"
                        >
                            <option selected disabled
                                >Choose a Font Family (optional)</option
                            >
                            <option value="Arial">Arial</option>
                            <option value="Helvetica">Helvetica</option>
                            <option value="Times New Roman"
                                >Times New Roman</option
                            >
                            <option value="Times">Times</option>
                            <option value="Courier New">Courier New</option>
                            <option value="Courier">Courier</option>
                            <option value="Verdana">Verdana</option>
                            <option value="Georgia">Georgia</option>
                            <option value="Palatino">Palatino</option>
                            <option value="Garamond">Garamond</option>
                            <option value="Bookman">Bookman</option>
                            <option value="Comic Sans MS">Comic Sans MS</option>
                            <option value="Trebuchet MS">Trebuchet MS</option>
                            <option value="Arial Black">Arial Black</option>
                            <option value="Impact">Impact</option>
                        </select>
                    </div>
                    <div class="grid md:grid-cols-2 md:gap-6 mt-5">
                        <div class="relative z-0 w-full mb-5 group">
                            <input
                                type="text"
                                name="floating_reg_no_font_weight"
                                id="floating_reg_no_font_weight"
                                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                                placeholder=" "
                                required
                            />
                            <label
                                for="floating_reg_no_font_weight"
                                class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
                                >Font Weight</label
                            >
                        </div>
                        <div class="relative z-0 w-full mb-5 group">
                            <input
                                type="text"
                                name="floating_reg_no_font_size"
                                id="floating_reg_no_font_size"
                                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                                placeholder=" "
                                required
                            />
                            <label
                                for="floating_reg_no_font_size"
                                class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
                                >Font Size</label
                            >
                        </div>
                    </div>
                    <div class="grid md:grid-cols-2 md:gap-6 mt-5">
                        <div class="relative z-0 w-full mb-5 group">
                            <input
                                type="text"
                                name="floating_reg_no_max_width"
                                id="floating_reg_no_max_width"
                                class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                                placeholder=" "
                            />
                            <label
                                for="floating_reg_no_max_width"
                                class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"
                                >Max width(optional)</label
                            >
                        </div>
                        <div>
                            <label for="underline_select" class="sr-only"
                                >Underline select</label
                            >
                            <select
                                id="text-align-reg-no"
                                class="block py-2.5 px-0 w-full text-sm text-gray-500 bg-transparent border-0 border-b-2 border-gray-200 appearance-none focus:outline-none focus:ring-0 focus:border-gray-200 peer"
                            >
                                <option selected disabled
                                    >Text Align (optional)</option
                                >
                                <option value="left">left</option>
                                <option value="center">center</option>
                                <option value="right">right</option>
                            </select>
                        </div>
                    </div>

                    <button
                        type="submit"
                        class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center mt-5"
                        >Apply</button
                    >
                </form>
            </div>
        </div>
    </div>
</div>
<script defer is:inline src="../../../public/js/updateRegNumber.js"></script>
